<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp">


    <TextView
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:id="@+id/item1_tv1"
        android:textColor="?attr/textColorValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/item1_iv"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="150dp" />
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/item1_iv1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="150dp" />
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/item1_iv2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="150dp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="20dp">

        <ImageView
            android:id="@+id/id1"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hoticon_textpage"
            />
        <TextView
            android:layout_toRightOf="@id/id1"
            android:layout_marginLeft="5dp"
            android:id="@+id/item1_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@id/item1_tv2"
            android:id="@+id/item1_tv3"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/pop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


</LinearLayout>